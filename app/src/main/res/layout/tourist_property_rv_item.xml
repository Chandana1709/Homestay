<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCVCourseItem"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:iss_auto_cycle="false"
            app:iss_delay="0"
            app:iss_period="1000" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_slider">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

<!--                <TextView-->
<!--                    android:id="@+id/iduserEmail"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:padding="2dp"-->
<!--                    android:text="Email"-->
<!--                    android:textColor="@color/purple_500"-->
<!--                    android:textSize="18sp"-->
<!--                    android:textStyle="bold" />-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/idpropertyName"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="Property Name"
                                    android:textColor="@color/purple_500"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                    <RatingBar
                                        android:id="@+id/rbStars"
                                        android:layout_width="wrap_content"
                                        android:layout_height="31dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_marginLeft="2dp"
                                        android:backgroundTint="#FB8C00"
                                        android:numStars="5"
                                        style="?android:attr/ratingBarStyleIndicator"
                                        android:stepSize="0.5"
                                        android:progressBackgroundTint="#FFFFFF"
                                        android:progressTint="#FB8C00" />
                                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/idpropertyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Address"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/update"
                    android:layout_marginTop="10dp"
                    android:layout_width="400dp"
                    android:layout_height="25dp"
                    android:background="#1e3d59"
                    android:text="Property Detailes "
                    android:textColor="@color/white" />

            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
